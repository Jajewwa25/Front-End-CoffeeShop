<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2>Your Shopping Cart 🛒</h2>
        <br>
        <% if (cart.length === 0) { %>
            <p>Your cart is empty.</p>
        <% } else { %>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Qty</th>
                        <th>Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <% let total = 0; %>
                    <% cart.forEach(item => { %>
                        <tr>
                            <td><%= item.itemname %></td> <!-- แสดงชื่อสินค้า -->
                            <td><%= item.qty %></td>
                            <td>
                                <% if (item.price && !isNaN(item.price)) { %>
                                  ฿<%= item.price.toFixed(2) %> <!-- แสดงราคา -->
                                <% } else { %>
                                  ฿0.00
                                <% } %>
                            </td>
                            <td>
                                <% if (item.price && item.qty && !isNaN(item.price) && !isNaN(item.qty)) { %>
                                  ฿<%= (item.price * item.qty).toFixed(2) %>
                                <% } else { %>
                                  ฿0.00
                                <% } %>
                            </td>
                        
                        </tr>
                        <% total += (item.price && item.qty) ? (item.price * item.qty) : 0; %>
                    <% }) %>
                </tbody>
                
            </table>
            <h4 class="text-end">Total: ฿<%= total.toFixed(2) %></h4>
            <center><button type="submit" class="btn-add-to-cart">Place an order 🛒</button></center>
        <% } %>
    </div>
</body>
</html>
