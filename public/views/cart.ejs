<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <link rel="stylesheet" href="../css/cart.css">
</head>
<body>
    <header>
        <h1>Shopping Cart</h1>
    </header>

    
    <main>

        <script>
            // JavaScript function to remove an item from the shopping cart
            function removeItem(itemId) {
                var item = document.getElementById(itemId);
                if (item) {
                    item.remove();
                }
            }

            function calculateTotalPrice() {
                var items = document.querySelectorAll('.item-price');
                var totalPrice = 0;
                items.forEach(function(item) {
                    totalPrice += parseFloat(item.textContent.replace('$', ''));
                });
                document.getElementById('total-amount').textContent = '$' + totalPrice.toFixed(2);
            }

                // JavaScript function to remove an item from the shopping cart and update total price
    function removeItem(itemId, price) {
        var item = document.getElementById(itemId);
        if (item) {
            var itemPrice = parseFloat(item.querySelector('.item-price').textContent.replace('$', ''));
            var totalPrice = parseFloat(document.getElementById('total-amount').textContent.replace('$', ''));
            totalPrice -= itemPrice;
            document.getElementById('total-amount').textContent = '$' + totalPrice.toFixed(2);
            item.remove();
        }
    }
        
            // Call the function to calculate total price when the page loads
            window.onload = calculateTotalPrice;
        </script>
    
        <h2>Your Cart</h2>

        <div id="shopping-cart">
            <div id="item1">
                <p>Product 1</p>
                <span class="item-price">$10.00</span>
                <button class="checkout-btn" onclick="removeItem('item1')">Remove Item</button>
            </div>
            <br>
            <div id="item2">
                <p>Product 2</p>
                <span class="item-price">$20.00</span>
                <button class="checkout-btn" onclick="removeItem('item2')">Remove Item</button>
            </div>
        </div>

        <div class="cart-total">
            <h3>Total:</h3>
            <span id="total-amount">$0.00</span>
        </div>

        <button class="checkout-btn"><a href="/menu">Back</a></button>
        <button class="checkout-btn"><a href="/order">Pay</a></button>
    </main>
</body>
</html>

